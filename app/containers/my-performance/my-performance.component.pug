div
  my-performance-table.left(
    [tableData]="_tableData", 
    [dateRange]="_dateRange", 
    [tableHeaderRow]="_tableHeaderRowLeft",
    [performanceMetric]="_performanceMetric",
    [totalRow]="_totalRowData",
    [sortingCriteria]="_sortingCriteria",
    [showOpportunities]="false",
    (onSortingCriteriaChanged)="handleSortRows($event)")

  my-performance-table.right(
    [tableData]="_rightTableData", 
    [tableHeaderRow]="_tableHeaderRowRight",
    [performanceMetric]="'Product Snapshot'",
    [sortingCriteria]="_sortingCriteria",
    [showOpportunities]="_showOpportunities",
    [viewType]="viewType.brands",
    (onSortingCriteriaChanged)="handleSortRows($event)")
