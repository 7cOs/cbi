compass-action-button(
  [actionLabel]="actionButtonType.AddToList",
  [isDisabled]="true",
  (onActionButtonClicked)="captureActionButtonClicked($event)"
)

compass-action-button.action-button-spacing(
  [actionLabel]="actionButtonType.Download",
  [isDisabled]="false",
  (onActionButtonClicked)="captureActionButtonClicked($event)"
)

lists-header(
  [summaryData]="listSummary",
  (manageButtonClicked)="handleManageButtonClick()",
  (listsLinkClicked)="handleListsLinkClick()"
)

compass-tabs((selectedTab) = "tabSelectedClick($event)")
  compass-tab([tabTitle]='firstTabTitle',
              [active]='true')
    list-performance-table(
      [tableHeaderRow]="performanceTableHeader",
      [totalRow]="performanceTableTotal",
      [tableData]="slicedPerformanceTableData"
    )
  compass-tab([tabTitle]='secondTabTitle')
    list-opportunities-table(
      [tableHeaderRow]="opportunitiesTableHeader",
      [tableData]="opportunitiesTableSlicedData"
    )

lists-pagination([tabName]='secondTabTitle',
                *ngIf='(selectedTab === "Opportunities") && (opportunitiesTableData.length)',
                (pageChangeClick)="handlePageClick($event)",
                [tableDataSize]="opportunitiesTableData.length")

lists-pagination([tabName]='firstTabTitle',
                *ngIf='(selectedTab === "Performance") && (performanceTableData.length)',
                (pageChangeClick)="handlePageClick($event)",
                [tableDataSize]="performanceTableData.length")
