section.landing-page

  section.landing-page-data(column="12")
    div(row)
      section.my-performance(column="7")
        section.greeting
          h1 {{l.greeting}}
        h2 #[a(href="#" ui-sref="scorecards") My Performance]
        .depletions(column="4")
          h3 Depletions FYTD
          table(cellspacing="0" cellpadding="0")
            tr
              th.accent CE
              th &nbsp;
            tr
              td
                h3 {{l.performanceData.performance[0].measures[0].value | number}}
              td
                h3(ng-class="l.isPositive(l.performanceData.performance[0].measures[0].percentChange) ? 'positive' : 'negative'").bold <span ng-if="l.isPositive(l.performanceData.performance[0].measures[0].percentChange | number:2)">+</span>{{l.performanceData.performance[0].measures[0].percentChange | number:2}}<span>%</span>
            tr
              td
                h3 &nbsp;
              td
                h3 &nbsp;
        .distribution(column="8")
          div.clearfix
            h3 Distribution L90
            h4.accent VS  YA%
          table(cellspacing="0" cellpadding="0")
            tr
              th.accent Simple
              th &nbsp;
              th &nbsp;
              th.accent Effective
              th &nbsp;
            tr
              td
                h3 {{l.performanceData.performance[3].measures[0].value | number}}
              td
                h3(ng-class="l.isPositive(l.performanceData.performance[3].measures[0].percentChange) ? 'positive' : 'negative'").bold <span ng-if="l.isPositive(l.performanceData.performance[3].measures[0].percentChange | number:2)">+</span>{{l.performanceData.performance[3].measures[0].percentChange | number:2}}<span>%</span>
              td.accent.table-spacer on
              td
                h3 {{l.performanceData.performance[4].measures[0].value | number}}
              td
                h3(ng-class="l.isPositive(l.performanceData.performance[4].measures[0].percentChange) ? 'positive' : 'negative'").bold <span ng-if="l.isPositive(l.performanceData.performance[4].measures[0].percentChange | number:2)">+</span>{{l.performanceData.performance[4].measures[0].percentChange | number:2}}<span>%</span>
            tr
              td
                h3 {{l.performanceData.performance[1].measures[0].value | number}}
              td
                h3(ng-class="l.isPositive(l.performanceData.performance[1].measures[0].percentChange) ? 'positive' : 'negative'").bold <span ng-if="l.isPositive(l.performanceData.performance[1].measures[0].percentChange | number:2)">+</span>{{l.performanceData.performance[1].measures[0].percentChange | number:2}}<span>%</span>
              td.accent.table-spacer off
              td
                h3 {{l.performanceData.performance[2].measures[0].value | number}}
              td
                h3(ng-class="l.isPositive(l.performanceData.performance[2].measures[0].percentChange) ? 'positive' : 'negative'").bold <span ng-if="l.isPositive(l.performanceData.performance[2].measures[2].percentChange)">+</span>{{l.performanceData.performance[2].measures[2].percentChange}}<span>%</span>
        p.accent.action-item.go-arrow #[a(href="#" ui-sref="scorecards") Show Details]
      section(column="4 +1")
        .announcement-widget
          img(src="../assets/img/icons/announcement-help.svg" width="80" height="80")
          h2 Welcome to Compass! Need Help?
          p Check out our tutorial videos! Learn about what makes the online version of Compass so great and how to get started!
          p.accent.action-item.go-arrow #[a(href="#" ui-sref="help" analytics-on="click" analytics-event="Help Feature Click") View all videos &amp; tutorials]
    div(row)
      section.my-performance(column="7")
        target
      section.opportunities(column="4 +1")
        h2 #[a(href="#" ui-sref="opportunities") Opportunities]
        h3 Saved Filters
        .filter-container.first
          .dropdown-filter
            .dropdown
              md-select(ng-model="l.filter.selected.savedFilters" aria-label="Saved Filter"  placeholder="Select saved report")
                md-option(ng-repeat="savedFilter in l.savedFilters" value="{{savedFilter.id}}") {{savedFilter.name}}
        h3 New Search
        .filter-container
          label
          md-radio-group(ng-model="l.filter.selected.premiseType")
            md-radio-button(ng-repeat="p in l.filter.premises | filter: '!All'" class="md-primary" ng-value="p.value" aria-label="p.name") {{p.name}}
          .filter-item
            .dropdown-filter
              .dropdown
                label opportunity type
                md-select(ng-model="l.filter.selected.opportunitiesTypes" aria-label="Opportunity Type" placeholder="Show all types")
                  md-option(ng-repeat="type in l.filter.opportunitiesTypes" aria-label="type.name" value="{{type.name}}") {{type.name}}
          .filter-item
            label Brand / Master SKU
            inline-search(type="product" placeholder="By brand or SKU" chosen-result="l.filtersService.model.brandSearchText")
          .filter-item
            label Retailer
            inline-search(type="store" placeholder="Store, account, or subaccount name" chosen-result="l.filtersService.model.accountSearchText")
          .filter-item
            label Distributor
            inline-search(type="distributor" placeholder="By name" chosen-result="o.filtersService.model.distributorSearchText")

          button.btn-action(analytics-on="click" analytics-event="Opportunity List Link Click") Find Opportunities
