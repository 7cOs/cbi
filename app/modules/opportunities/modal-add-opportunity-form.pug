div.modal
  div.title
    h4 Add Opportunity
  div.modal-form
    div.modal-input
      label Account
      input(ng-model="tempPlaceholder")
    div.modal-input.clearfix
      label Opportunity Type
      md-radio-group.horizontal-layout
        md-radio-button New Distribution
        md-radio-button Other
        input(ng-model="tempPlaceholder").short
    div.modal-input
      label Recommended Brand or Package/ SKU
      input(ng-model="tempPlaceholder")
    div.modal-input
      label Rationale
      .dropdown-filter
        .dropdown
          md-select(ng-model="o.somethingInTheFuture" aria-label="rationale dropdown" placeholder="Select an option")
            md-option(aria-label="rationale modal form" value="")
    div.modal-input
      label Impact
      .dropdown-filter.half-width
        .dropdown.short
          md-select(ng-model="o.somethingInTheFuture" aria-label="impact dropdown" placeholder="Select an option")
            md-option(aria-label="impact modal form" value="high") High
            md-option(aria-label="impact modal form" value="medium") Medium
            md-option(aria-label="impact modal form" value="low") Low
    div.modal-input.icon-container
      img(src="../assets/img/icons/overview-overall-market.svg")
      p.accent.left Add another opportunity for this store
    div.modal-input.clearfix
      label Add to target list (optional)
      md-radio-group.horizontal-layout
        md-radio-button Add to target list
        input(ng-model="tempPlaceholder" placeholder="Type the name of a target list").medium-short
    button(disabled).btn-action Add
    p.cancel.accent X Cancel
