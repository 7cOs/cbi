            td(ng-class="{'negative': s.isNegative(distribution.measures.growthContribution)}").dark    {{distribution.measures.growthContribution}}%
            td(ng-class="{'negative': s.isNegative(distribution.measures.growthContributionBu)}").dark  {{distribution.measures.growthContributionBu}}%
