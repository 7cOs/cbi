div.compass-modal
    div.compass-modal-header
      h1.compass-modal-title {{ modalInputs.title }}
      div.X-modal-btn-container((click)='hideModal(compassManageListModalEvent.Close)')
        img.X-modal-btn(src="../../../assets/img/icons/thin-x.svg")
    div.compass-modal-body
      form([formGroup]='listForm')
        div.modal-input
          label Name
          input(formControlName="targetName")
        div.modal-input
          label Description (optional)
          textarea(formControlName="description")
        div.modal-input
          label Collaborators
          div.collaborator-list
            .collaborator.manage-list
              .align-left(*ngIf="modalInputs.listObject.owner.user.employeeId === modalInputs.currentUser.employeeID") You
                .accent Owner
              .align-left(*ngIf="modalInputs.listObject.owner.user.employeeId !== modalInputs.currentUser.employeeID") {{modalInputs.listObject.owner.user.firstName | titlecase}} {{modalInputs.listObject.owner.user.firstName.lastName | titlecase}}
            .collaborator.manage-list(*ngFor="let collaborator of modalInputs.listObject.collaborators")
              .align-left {{collaborator.firstName | titlecase}} {{collaborator.lastName | titlecase}}
                .accent {{ collaborator.permissionLevel }}
            .collaborator.manage-list(*ngFor="let pending of pendingCollaborators")
              .align-left(ng-if="modalInputs.currentUser.employeeID !== pending.employeeId") {{pending.firstName | titlecase}} {{pending.lastName | titlecase}}
                .accent Collaborator
        div.modal-input
          label Add Collaborators
          compass-user-search([parentGroup]='listForm',
          (addedCollaboratorEvent)="addCollaborator($event)")
    div.compass-modal-action-bar
      span.compass-modal-btn((click)='hideModal(compassManageListModalEvent.Decline)') {{ modalInputs.rejectLabel }}
      button.btn-action((click)='hideModal(compassManageListModalEvent.Accept)') {{ modalInputs.acceptLabel }}
