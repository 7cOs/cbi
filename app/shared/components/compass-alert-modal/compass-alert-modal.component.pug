div.compass-modal
  div
    div.compass-modal-header
      h1.compass-modal-title {{ displayData.title }}
      div.X-modal-btn-container((click)='hideModal(compassAlertModalEvent.Close)')
        img.X-modal-btn(src="../../../assets/img/icons/thin-x.svg")
    div.compass-modal-body
      p {{ displayData.body }}
    div.compass-modal-action-bar
      span.compass-modal-btn((click)='hideModal(compassAlertModalEvent.Decline)') {{ displayData.rejectLabel }}
      button.btn-action((click)='hideModal(compassAlertModalEvent.Accept)') {{ displayData.acceptLabel }}
