.modal.opportunity-memo
  .title(ng-if="list.memoError === true")
    h4 Error!
    a.hide-row(ng-click="list.closeModal()")
  div.modal-form.clearfix(ng-if="list.memoError === true")
    .row.clearfix
      p.error-message.accent.general-error <img src="./assets/img/icons/error.svg"> Sorry, {{list.memoType}} details not found for this Opportunity.
  .title(ng-if="list.memoError === false")
    a.hide-row(ng-click="list.closeModal()")
    h4 {{list.memoData.typeDescription}}
  div.modal-form.clearfix(ng-if="list.memoError === false")
    div(column="12").regional-status.mandate-icon
      div(ng-class="{'featured': list.memoData.featureCode, 'mandatory': list.memoData.authorizationCode}")
    div(row).clearfix
      div(column="6")
        div(column="6")
          label Start date
          h3(ng-if="list.memoData.featurePeriodStartDate === null || list.memoData.setPeriodStartDate === null") None
          h3(ng-if="list.memoData.featurePeriodStartDate !== undefined") {{list.memoData.featurePeriodStartDate | date:'MM/dd/yy'}}
          h3(ng-if="list.memoData.setPeriodStartDate !== undefined") {{list.memoData.setPeriodStartDate | date:'MM/dd/yy'}}
        div(column="6")
          label End date
          h3(ng-if="list.memoData.featurePeriodEndDate === null || list.memoData.setPeriodEndDate === null") None
          h3(ng-if="list.memoData.featurePeriodEndDate !== undefined") {{list.memoData.featurePeriodEndDate | date:'MM/dd/yy'}}
          h3(ng-if="list.memoData.setPeriodEndDate !== undefined") {{list.memoData.setPeriodEndDate | date:'MM/dd/yy'}}
      div(column="6" ng-if="list.memoData.authorizationCode")
        div(column="6")
          label Reset Start
          h3(ng-if="list.memoData.resetPeriodStartDate === null") None
          h3(ng-if="list.memoData.resetPeriodStartDate !== null") {{list.memoData.resetPeriodStartDate | date: 'MM/dd/yy'}}
        div(column="6")
          label Reset End
          h3(ng-if="list.memoData.resetPeriodEndDate === null") None
          h3(ng-if="list.memoData.resetPeriodEndDate !== null") {{list.memoData.resetPeriodEndDate | date: 'MM/dd/yy'}}
    div(row ng-if="list.memoData.price !== undefined").clearfix.price-menu
      div(column="3").price
        label Price
        h3 {{list.memoData.price | currency}}
      div(column="6")
        label On menu / On display?
        h3 {{list.memoData.onMenuFlag}}
    div(ng-if="list.memoData.additionalNotes !== null" column="12").memo-notes
      label Additional notes
      p(ng-if="list.memoData.additionalNotes === null") None
      p(ng-if="list.memoData.additionalNotes !== null") {{list.memoData.additionalNotes}}
