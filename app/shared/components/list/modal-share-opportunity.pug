div.modal.share-opportunity
  .title
    a.hide-row(ng-click="list.closeModal()")
    h4 Share Opportunity
  div.modal-form
    div.modal-input
      label Add Recipient
      inline-search(type="user" placeholder="Name or CBI email address" chosen-result="list.collaborator" callback="list.addToSharedCollaborators(result)")
    div.collaborator-list
      .collaborator(ng-repeat="collaborator in list.sharedCollaborators") {{collaborator.firstName | titlecase}} {{collaborator.lastName | titlecase}}<span class="break">&nbsp;</span>
    button.btn-action(ng-click="list.shareOpportunity()") Send
    p.cancel.accent(ng-click="o.closeEditModal()") X Cancel
