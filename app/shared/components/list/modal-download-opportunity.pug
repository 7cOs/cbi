div.modal.download-opportunity
  .title
    a.hide-row(ng-click="list.closeModal()")
    h4 Download
  div.modal-form
    label.top Current Selection:
      p
        span.opportunities {{list.selected.length}} opportunities
        span.across-stores  across {{list.filtersService.model.appliedFilter.pagination.totalStores | number:0}} stores

    label Download:
      md-radio-group(ng-model="list.csvDownloadOption")
        md-radio-button.md-primary(value="WithRationales" aria-label="With Rationales") Opportunities with rationales
        md-radio-button.md-primary(value="WithoutRationales" aria-label="Without Rationales") Opportunities without rationales
        md-radio-button.md-primary(value="Stores" aria-label="New Distribution") Stores only

    button.btn-action(ng-csv="list.getCSVData(list.downloadOption)"
                      filename="{{list.getDate() | date:'yyyy-MM-dd'}}.csv"
                      csv-header="list.getCSVHeader()"
                      ng-click="$mdCloseMenu($event)"
                      analytics-event-on="click"
                      category="Opportunities"
                      action="Download"
                      label="{{list.currentOpportunityId}}") Download
