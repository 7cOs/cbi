section.opportunities-component-section

  .opportunities-header
    .header-summary
      .header-title Opportunities
      .header-sub-title {{ subtitle }}
    .header-tooltip(*ngIf='tooltip.descriptions')
      compass-tooltip(
        [title]= "tooltip.title",
        [descriptions]="tooltip.descriptions",
        [position]="tooltip.position")
    .close-indicator-container
      img.close-indicator(src="../../../assets/img/icons/thin-x.svg", (click)="onCloseIndicatorClicked.emit()")

  .opportunities-summary
    .product-name {{ productName }}
    .product-premise-type {{ premiseType }} Opportunities

  .opportunities-table
    .label-row
      .type-label Opportunity Type
      .count-label # Of Opportunities

    .opportunity-row(*ngFor="let opportunity of opportunities")
      div {{ opportunity.name }}
      div((click)="handleOpportunityCountClicked(opportunity)") {{ opportunity.count | number }}

    .opportunity-row.total-row
      .total-row-label Total
      .total-row-value {{ total | number }}
