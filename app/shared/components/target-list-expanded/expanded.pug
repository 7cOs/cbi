.clearfix
  button.icon.select-all Select All

  .target-action-buttons
    button(disabled="disabled" ng-if="expanded.buttonState === 'named'").btn-action Archive
    button(disabled="disabled" ng-if="expanded.buttonState !== 'shared'").btn-action Delete
    button.btn-action Create a New List

div.expanded-target-lists
  md-tabs(md-dynamic-height='' md-border-bottom)
    md-tab(label='My Target Lists' md-on-select="expanded.selector('named')")
      md-content.md-padding
        div(row).clearfix
          div.checkbox-wrapper.placeholder
          div.checkbox-sibling-target(column="12")
            div(row).target-list-count-container
              h5(column="5").accent.completed.left  <br />List Name
              h5(column="2").accent <br />Collaborators
              h5(column="1").accent Last Updated
              h5(column="1").accent Closed Opportunities
              h5(column="1").accent Total Opportunities
              h5(column="2").accent Depletions Since <br />Closed (CE)

        div(row).target-list-detail-container
          div(ng-show="!expanded.namedFilters.length").no-opportunites
            h4 No Opportunities have been added yet
            p Try Searching for <span>Opportunities</span> and add them to your list
          ul
            li(ng-repeat="list in expanded.namedFilters").clearfix
              div.checkbox-wrapper.named-target-list(ng-click="list.toggle(opportunity, list.selected)")
                md-checkbox(aria-label="Select Item" ng-checked="list.exists(opportunity, list.selected)")
              div.checkbox-sibling(column="12")
                div(row)
                  h4(column="5").left {{list.name}}
                  h5(column="2").accent.gray {{list.members.length}} members
                  h5(column="1").accent.gray {{list.created}}
                  h4(column="1").closed {{list.closedOpportunities | number}}
                  h4(column="1") {{list.opportunities | number}}
                  h4(column="2") {{273000 | number}}
                div(row).creator
                  h5(column="3").accent.left Nils Frahm
                div(row)
                  md-progress-linear(md-mode="determinate" ng-value="expanded.ratio(list.closedOpportunities, list.opportunities)")
