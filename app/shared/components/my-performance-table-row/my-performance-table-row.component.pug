td.left-col(colspan=1)
  div.left-col-content([ngClass]="{'showing-image': showX || isRolegroups}")

    div.dismissable-row-X-container(*ngIf="showX", (click)="onDismissableRowXClicked.emit()")
      img.dismissable-row-X(src="../../../assets/img/icons/thin-x.svg")
    div.rolegroup-icon-container(*ngIf="isRolegroups")
      div.rolegroup-icon-background([ngClass]="getRolegroupIconClass()")

    div.left-col-text-content
      div.description-line-0
        span {{rowData.descriptionRow0}}
      div.description-line-1(*ngIf="rowData.descriptionRow1",
                            [ngClass]="getSublineClass()",
                            (click)="sublineClicked($event)")
        span.description-line-1 {{rowData.descriptionRow1}}

td.center-col(colspan=1) {{rowData.metricColumn0 | number}}
td.center-col(colspan=1)
  span([ngClass]="getTrendClass(rowData.metricColumn1)") {{rowData.metricColumn1 | number}}
td.center-col(colspan=1)
  span([ngClass]="getTrendClass(rowData.metricColumn1)") {{rowData.metricColumn2 | number:'1.1-1'}}%
td.right-col(*ngIf="showContributionToVolume", colspan=1)
  span.ctv {{rowData.ctv | number:'1.1-1'}}%
td.right-col(
  *ngIf="showOpportunities", colspan=1,
  [class.opportunities]="rowData.opportunities > 0",
  [class.opportunities-error]="opportunitiesError",
  (click)="opportunityCountClicked($event)") {{getOpportunityCountText(rowData.opportunities, opportunitiesError)}}

//- Temporary td column to act as an empty filler until a Simple Opportunities column is implemented
td.right-col(*ngIf="showEmptyLastColumn", colspan=1)
