td.left-col(colspan=1, [ngClass]="showOpportunities ? 'col-16-pct' : 'col-20-pct'")
  span([ngClass]="rowType === 0 || rowType === 1 ? 'link-out' : ''") {{rowData.descriptionLine0}} {{rowType}}
  span(*ngIf="rowData.descriptionLine1") {{rowData.descriptionLine1}}
td.center-col(colspan=1, [ngClass]="showOpportunities ? 'col-16-pct' : 'col-20-pct'") {{rowData.metricColumn0}}
td.center-col(colspan=1, [ngClass]="showOpportunities ? 'col-16-pct' : 'col-20-pct'") 
  span([ngClass]="isNegative(rowData.metricColumn1) ? 'negative' : 'positive'") {{rowData.metricColumn1}}
td.center-col(colspan=1, [ngClass]="showOpportunities ? 'col-16-pct' : 'col-20-pct'")
  span([ngClass]="isNegative(rowData.metricColumn1) ? 'negative' : 'positive'") {{rowData.metricColumn2}}%
td.right-col(colspan=1, [ngClass]="showOpportunities ? 'col-16-pct' : 'col-20-pct'") 
  span.ctv {{rowData.ctv}}%
td.right-col.opportunities(*ngIf="showOpportunities", colspan=1, [ngClass]="showOpportunities ? 'col-16-pct' : 'col-20-pct'") {{rowData.opportunities || 0}} 