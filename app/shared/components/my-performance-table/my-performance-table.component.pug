div.performance-table-wrapper
  div.performance-table-summary.col-100-pct
    h1 {{ performanceMetric }} {{ dateRange.displayCode }}
    h4 {{ dateRange.range }}
  table.my-performance-table.col-100-pct
    thead.col-100-pct
      tr.top-header.col-100-pct
        th.col-20-pct.left-col.sortable(colspan=1, (click)="sortRows('descriptionLine0')") {{ tableHeaderRow[0] }}
        th.col-60-pct.center-col.sortable(colspan=3) {{ tableHeaderRow[1] }} 
        th.col-20-pct.right-col.sortable(colspan=1, (click)="sortRows('ctv')") {{ tableHeaderRow[2] }}
    tr.sub-header.col-100-pct
      th.col-20-pct(colspan=1)
      th.col-20-pct.center-col.sortable(colspan=1, (click)="sortRows(2, false)") CYTV
      th.col-20-pct.center-col.sortable(colspan=1, (click)="sortRows('metricColumn1')") VS YA
      th.col-20-pct.center-col.sortable(colspan=1, (click)="sortRows('metricColumn2')") VS YA%
      th.col-20-pct(colspan=1)
    tr.total-row.col-100-pct(my-performance-table-row, 
                             [rowData]="totalRowData")
    tr.entity-row.col-100-pct(my-performance-table-row, 
                              *ngFor="let rowData of _tableData, let i = index", 
                              [rowData]="rowData",
                              (click)="clickOn(rowData, i)")
